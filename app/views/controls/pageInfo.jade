.row
	.col-lg-12
		h1
			=pageInfo.header
			small &nbsp;
				=pageInfo.subHeader
		ol.breadcrumb
			each bc in pageInfo.crumbs
				li
					a(href=bc.href)
						i(class='fa '+bc.icon)
						| &nbsp;
						=bc.name
			if pageInfo.current
				li.active
					i(class='fa '+pageInfo.current.icon)
					| &nbsp;
					=pageInfo.current.name
