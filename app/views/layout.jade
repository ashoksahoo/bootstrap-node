doctype 5
html
	head
		title= title
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		meta(name='description', content='')
		meta(name='author', content='Prakash Kumar')
		link(rel='stylesheet', href='/css/ext/bootstrap.css')
		link(rel='stylesheet', href='/css/style.css')
		link(rel='stylesheet', href='/css/ext/font-awesome.min.css')
		script(src='/js/jquery.js', type='text/javascript')
		script(src='/js/ext/bootstrap.js', type='text/javascript')
		script(src='/js/script.js', type='text/javascript')
		block scripts
	body
		-crumbs = [{icon:'fa-lock', name:'Login', href:'/login'}]
		-currentPos = {icon:'fa-dashboard', name:'Dashboard'}
		-samplePageInfo = { header:'Home', subHeader:'Sub Heading' , crumbs : crumbs, current: currentPos}
		-pageInfo = typeof(pageInfo) != 'undefined' ? pageInfo: samplePageInfo

		-hasLeftMenu = typeof(hasMenu) != 'undefined' && !hasMenu ? 'false' : 'true'
		#wrapper(data-menu=hasLeftMenu)
			include ./controls/topBar
			#page-wrapper
				include ./controls/pageInfo
				block content
		//Placeholders for non HTML5 browsers mainly IE 9 and below
		script(src='/js/ext/placeholder.js', type='text/javascript')
